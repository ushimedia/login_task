<h1>アカウント編集ページ</h1><br>



<%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :名前 %>
    <%= f.text_field :name %><br><br>
    <%= f.label :メールアドレス %>
    <%= f.email_field :email %><br><br>
    <%= f.label :パスワード %>
    <%= f.password_field :password %><br><br>
    <%= f.label :パスワード（確認） %>
    <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit "更新する" %>
  <% end %>
  <br>
  <%= link_to "戻る", user_path(current_user.id), id: "back" %>
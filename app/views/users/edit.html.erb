<h1>アカウント編集ページ</h1><br>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_with(model: @user, local: true) do |f| %>
    <%= f.label :name, "名前" %>
    <%= f.text_field :name %><br><br>
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email %><br><br>
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password %><br><br>
    <%= f.label :password_confirmation, "パスワード（確認）" %>
    <%= f.password_field :password_confirmation %><br><br>
    <%= f.submit "更新する" %>
  <% end %>
  <br>
  <%= link_to "戻る", user_path(current_user.id), id: "back" %>